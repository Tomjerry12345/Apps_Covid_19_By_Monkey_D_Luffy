<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.tomjerry.appscovid19.ui.main.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card1"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="148dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="274dp"
            app:cardBackgroundColor="@color/blue_dark"
            app:cardCornerRadius="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.757">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.message}"
                android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/kasus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.kasusIndonesia}"
                        android:textColor="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/jumlahKasus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.jmKasusIndonesia}"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.meninggalIndonesia}"
                        android:textColor="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.jmMeninggalIndonesia}"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.sembuhIndonesia}"
                        android:textColor="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.jmSembuhIndonesia}"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indonesia"
                    android:textSize="18dp"
                    android:layout_marginTop="14dp"
                    android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                    android:textColor="@color/white"
                    android:layout_gravity="center" />

                <com.google.android.material.textview.MaterialTextView
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10-09-2018"
                    android:textSize="12dp"
                    android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card2"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="148dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/blue_dark"
            app:cardCornerRadius="14dp"
            app:layout_constraintStart_toEndOf="@id/card1"
            app:layout_constraintTop_toTopOf="@+id/card1">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.message}"
                android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.kasusMakassar}"
                        android:textColor="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.jmKasusMakassar}"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.meninggalMakassar}"
                        android:textColor="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.jmMeninggalMakassar}"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.sembuhMakassar}"
                        android:textColor="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.jmSembuhMakassar}"
                        android:textColor="@color/white" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makassar"
                    android:textSize="18dp"
                    android:layout_marginTop="14dp"
                    android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                    android:textColor="@color/white"
                    android:layout_gravity="center" />

                <com.google.android.material.textview.MaterialTextView
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10-09-2018"
                    android:textSize="12dp"
                    android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>