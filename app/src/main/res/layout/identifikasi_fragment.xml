                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/gambar3_1"
                app:layout_constraintStart_toStartOf="@id/gambar3_1"
                android:textColor="@color/white"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Sesak napas berat"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text3_1"
                app:layout_constraintStart_toStartOf="@id/text3_1"
                android:layout_below="@id/text3_1"
                android:textColor="@color/white"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text3_3"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="- Pernah memiliki riwayat penyakit / sedang menderita penyakit Pneumonia (paru-paru basah) / ISPA(Infeksi Saluran Pernapasan)"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text3_2"
                app:layout_constraintStart_toStartOf="@id/text3_2"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#FF3D3D"
