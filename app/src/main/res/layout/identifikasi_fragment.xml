                app:backgroundTint="#79A7F4"
                android:background="#3DFFEB"
                app:layout_constraintBottom_toBottomOf="@id/tampilan2"
                app:layout_constraintEnd_toEndOf="@id/tampilan2"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tampilan3"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/biru"
                app:layout_constraintTop_toBottomOf="@id/tampilan2"
