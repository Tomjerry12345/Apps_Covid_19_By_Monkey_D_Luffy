<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.tomjerry.appscovid19.ui.identifikasi.IdentifikasiViewModel" />
    </data>

    <ScrollView
        tools:context=".testing.BacotActivity"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tampilan1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/background_blue_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gambar1_1"
                android:layout_width="250dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="@id/tampilan1"
                app:layout_constraintStart_toStartOf="@id/tampilan1"
                app:layout_constraintEnd_toEndOf="@id/tampilan1"
                app:layout_constraintBottom_toBottomOf="@id/tampilan1"
                android:background="@drawable/bg_question" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Pernah mengunjugi / Berada"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="@id/gambar1_1"
                app:layout_constraintStart_toStartOf="@id/gambar1_1"
                app:layout_constraintEnd_toEndOf="@id/gambar1_1"
                android:textSize="12sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text1_1"
                app:layout_constraintStart_toStartOf="@id/text1_1"
                android:text="di kawasan yang terpapar"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="covid 19 / Pernah melakukan"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text1_2"
                app:layout_constraintStart_toStartOf="@id/text1_2"
                android:textColor="@color/white"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Kontak langsung dengan"
                app:layout_constraintTop_toBottomOf="@id/text1_3"
                app:layout_constraintStart_toStartOf="@id/text1_3"
                android:textColor="@color/white"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text1_4"
                app:layout_constraintStart_toStartOf="@id/text1_4"
                android:text=" penderita covid19"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#FF3D3D"
                android:text="Iya"
                android:textColor="#FFFFFF"
                app:backgroundTint="#FF3D3D"
                app:layout_constraintTop_toBottomOf="@id/gambar1_1"
                app:layout_constraintStart_toStartOf="@id/gambar1_1"
                app:cornerRadius="15dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/back1_1"
                app:cornerRadius="15dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/gambar1_1"
                app:layout_constraintEnd_toEndOf="@id/gambar1_1"
                android:text="Tidak"
                android:textColor="#000000"
                app:backgroundTint="#3DFFEB"
                android:background="#3DFFEB"
                android:layout_gravity="center" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/previous1_1"
                app:cornerRadius="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sebelumnya"
                android:textColor="#ffffff"
                app:backgroundTint="#2A8787"
                app:layout_constraintBottom_toBottomOf="@id/tampilan1"
                app:layout_constraintStart_toStartOf="@id/tampilan1"
                android:drawableLeft="@drawable/ic_arrow_back_white_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next1_1"
                app:cornerRadius="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selanjutnya"
                android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
                android:textColor="#ffffff"
                app:backgroundTint="#79A7F4"
                android:background="#3DFFEB"
                app:layout_constraintBottom_toBottomOf="@id/tampilan1"
                app:layout_constraintEnd_toEndOf="@id/tampilan1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tampilan2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
