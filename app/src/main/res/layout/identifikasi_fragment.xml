            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text2_4"
                app:layout_constraintStart_toStartOf="@id/text2_4"
                android:text="- Demam > 38 C"
                android:textColor="@color/white"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text2_5"
                app:layout_constraintStart_toStartOf="@id/text2_5"
                android:text="- Sesak napas ringan"
                android:layout_below="@id/text2_5"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#FF3D3D"
                android:text="Iya"
                android:textColor="#FFFFFF"
                app:backgroundTint="#FF3D3D"
                app:layout_constraintTop_toBottomOf="@id/gambar2_1"
                app:layout_constraintStart_toStartOf="@id/gambar2_1"
                app:cornerRadius="15dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/back2_1"
                app:cornerRadius="15dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/gambar2_1"
                app:layout_constraintEnd_toEndOf="@id/gambar2_1"
                android:text="Tidak"
                android:textColor="#000000"
                app:backgroundTint="#3DFFEB"
                android:background="#3DFFEB"
                android:layout_gravity="center" />


