                app:layout_constraintEnd_toEndOf="parent"

                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gambar3_1"
                android:layout_width="250dp"
                android:layout_height="170dp"
                app:layout_constraintTop_toTopOf="@id/tampilan3"
                app:layout_constraintStart_toStartOf="@id/tampilan3"
                app:layout_constraintEnd_toEndOf="@id/tampilan3"
                app:layout_constraintBottom_toBottomOf="@id/tampilan3"
