                app:layout_constraintTop_toBottomOf="@id/tampilan1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gambar2_1"
                android:layout_width="250dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="@id/tampilan2"
                app:layout_constraintStart_toStartOf="@id/tampilan2"
                app:layout_constraintEnd_toEndOf="@id/tampilan2"
                app:layout_constraintBottom_toBottomOf="@id/tampilan2"
                android:background="@drawable/bg_question" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="Mengalami salah satu penyakit berikut :"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@id/gambar2_1"
                app:layout_constraintStart_toStartOf="@id/gambar2_1"
                app:layout_constraintEnd_toEndOf="@id/gambar2_1"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Sakit Tenggorokanr"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/text2_1"
                app:layout_constraintStart_toStartOf="@id/text2_1"
